{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ES2020"
    ],
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "declaration": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "!./node_modules/@types",
    "./node_modules",
    "./dist",
    "**/__tests__",
  ]
}